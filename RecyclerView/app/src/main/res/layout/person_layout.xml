<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/person_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:text="id osobe" />

    <TextView
        android:id="@+id/person_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/person_id"
        android:layout_marginLeft="20dp"


        android:text="ime osobe"

        />

    <TextView
        android:id="@+id/person_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_firstName"
        android:layout_alignStart="@+id/person_firstName"
        android:layout_alignLeft="@+id/person_firstName"

        android:text="prexime"
        />

    <TextView
        android:id="@+id/person_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/person_firstName"
        android:layout_marginLeft="30dp"

        android:text="datum"
        />

</RelativeLayout>